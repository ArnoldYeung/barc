<launch>
    <!-- SYSTEM MODEL -->
    <!-- flags -->
    <param name="BUFFERSIZE" type="int" value="500" />
    <param name="LMPC_LAP" type="int" value="30" />
    <!-- flags -->
    <param name="sim_flag" type="bool" value="true" />
    <param name="PF_flag" type="bool" value="true" />
    <param name="feature_flag" type="bool" value="false" />
    <!-- vehicle parameters -->
    <param name="L_a" type="double" value="0.125" />
    <param name="L_b" type="double" value="0.125" />
    <param name="m" type="double" value="1.98" />
    <param name="I_z" type="double" value="0.03" />
    <!-- Track parameters -->
    <param name="ds" type="double" value="0.01" />
    <param name="ey" type="double" value="0.8" />
    <param name="ey_tighten" type="double" value="1.0" />

    <!-- CONTROL -->
    <node pkg="barc" type="controllerKin.jl" name="controller" output="screen">
        <!-- Controller flags -->
        <param name="GP_LOCAL_FLAG" type="bool" value="false" />
        <param name="GP_FULL_FLAG"  type="bool" value="false" />
        <!-- Controller parameters -->
        <param name="dt"        type="double" value="0.1" />
        <param name="c_f"       type="double" value="0.5" />
        <param name="delay_df"  type="int" value="1" />
        <param name="delay_a"   type="int" value="1" />
        <param name="N"         type="int" value="5" />
        <param name="n_state"   type="int" value="4" />
        <!-- Safe set parameters -->
        <param name="Nl"        type="int" value="2" />
        <param name="Np"        type="int" value="10" />
        <!-- SYS ID parameters -->
        <param name="feature_Nl"    type="int" value="2" />
        <param name="feature_Np"    type="int" value="30" />
    </node>
</launch>
